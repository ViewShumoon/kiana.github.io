{
	"extends": [
		"@vue/tsconfig/tsconfig.json",
		"@tsconfig/node18/tsconfig.json"
	],
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "ES2021.String", 
      "ES2021.Promise",
      "DOM", 
      "DOM.Iterable"
    ],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./",
    "paths": {
        "@/*": ["./src/*"],
        "@assets/*": ["./src/assets/*"],

        "@types/*": ["src/types/*"],
        "@components/*": ["./src/components/*"],
        "@views/*": ["./src/views/*"],
        "@routes/*": ["src/routes/*"],
        "@services/*": ["src/services/*"],

        "@api/*": ["./src/api/*"],
        "@stores/*": ["src/stores/*"],

        "@utils/*": ["./src/utils/*"]
    },
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue",
		"types/**/*.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
